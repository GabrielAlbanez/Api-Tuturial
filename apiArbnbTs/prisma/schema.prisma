// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Usuarios{
id String @id @default(uuid())
name String
email  String
cfp String
senha String
Favoritos Casas[]
}

model Casas {
  id          String    @id @default(uuid())
  Usuarios    Usuarios  @relation(fields: [usuarioId], references: [id])
  usuarioId   String
  name        String
  imagensCasa imgsCasa[] // Definindo a relação um-para-muitos
}

model imgsCasa {
  id         String   @id @default(uuid())
  url        String
  casa       Casas    @relation(fields: [casaId], references: [id]) // Relação inversa
  casaId     String   // Campo para armazenar o ID da casa relacionada

}
